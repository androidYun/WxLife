<!--pages/address/add/add.wxml-->
<view>
    <van-cell-group>
        <van-field
                value="{{ userName }}"
                label="用户名"
                placeholder="请输入用户名"
        />

        <van-field
                value="{{ phoneNumber }}"
                label="手机号"
                placeholder="请输入手机号"
        />
        <van-field
                label="地址"
                placeholder="选择省/市/区"
        />
        <van-cell  value="选择省/市/区" is-link bindtap="selectArea">
            <view slot="title" class="cell_title_value">
                <view class="van-cell-text">地址</view>
                <span class="value">{{provinceCityArea}}</span>
            </view>
        </van-cell>
        <van-cell value="选择小区" is-link bindtap="selectCommunity">
            <view slot="title" class="cell_title_value">
                <view class="van-cell-text">小区</view>
                <span class="value">{{communityName}}</span>
            </view>
        </van-cell>
        <van-cell  value="选择楼宇" is-link bindtap="selectBuildNumber">
            <view slot="title" class="cell_title_value">
                <view class="van-cell-text">楼宇</view>
                <span class="value">{{buildName}}</span>
            </view>
        </van-cell>
        <van-cell value="选择单元" is-link bindtap="selectUnit">
            <view slot="title" class="cell_title_value">
                <view class="van-cell-text">单元</view>
                <span class="value">{{unitName}}</span>
            </view>
        </van-cell>
        <van-cell  value="选择层数" is-link bindtap="selectFloor">
            <view slot="title" class="cell_title_value">
                <view class="van-cell-text">层数</view>
                <span class="value">{{floorName}}</span>
            </view>
        </van-cell>
        <van-cell title="房号" value="请选择房号" is-link bindtap="selectUserNumber">
            <view slot="title" class="cell_title_value">
                <view class="van-cell-text">房号</view>
                <span class="value">{{owerName}}</span>
            </view>
        </van-cell>
        <span>{{address.userAddress}}</span>
        <van-field
                label="详细地址"
                placeholder="街道门,楼层，门牌号等等"
        />
        <van-switch-cell
                title="是否是默认地址"
                checked="{{ isDefault }}"
                bind:change="onChange"

        />
    </van-cell-group>
    <block wx:if="{{isShowArea}}">
        <van-area area-list="{{ areaList }}" columns-num="{{ 3 }}" bind:confirm="confirmArea" bind:cancel="cancelArea"
                  title="标题"/>
    </block>
    <van-action-sheet
            show="{{ dialogShow }}"
            actions="{{ addressList }}"
            bind:close="onClose"
            bind:select="onSelectAddress"
    />
</view>
