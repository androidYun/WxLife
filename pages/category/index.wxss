/* pages/component/index.wxss */

.category_body {
    background-color: #EEEEEE;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.category_body .select_line {
    height: 30px;
    width: 1.5px;
    background-color: #41b357;
}

.category_body .select_category {
    font-size: 14px;
    flex: 1;
    height: 100%;
    display: flex;
    background-color: #FFFFFF;
    justify-content: center;
    align-items: center;
    color: #41b357;
}

.category_body .normal_category {
    font-size: 14px;
    flex: 1;
    height: 100%;
    align-items: center;
    background-color: #EEEEEE;
    display: flex;
    justify-content: center;
    color: #333333;
}

.buy_count_total_price_add_order {
    position: fixed;
    bottom: 10px;
    margin-left: 6%;
    margin-right: 6%;
    display: flex;
    align-items: center;
    align-self: center;
    justify-content: space-between;
    height: 40px;
    width: 84%;
    border-radius: 20px;
    background-color: #414141;
    padding-left: 4%;

}

.buy_count_total_price_add_order .payment_btn {
    padding: 0px;
    margin: 0px;
    height: 100%;
    text-align: center;
    color: #FFFFFF;
    font-size: 16px;
    width: 80px;
    background-color: #41b357;
    border-radius: 0px 20px 20px 0px;
}

.buy_count_total_price_add_order .buy_count {
    width: 16px;
    height: 16px;
    margin-right: 6px;
    line-height: 16px;
    border-radius: 10px;
    text-align: center;
    font-size: 10px;
    position: absolute;
    color: #FFFFFF;
    background-color: #FF3030;
}

.buy_count_total_price_add_order .buy_count_total_price {
    display: flex;
}

.buy_count_total_price_add_order .buy_count_total_price .total_price {
    color: #FF3030;
    margin-left: 40px;
    font-size: 14px;
}

/*物品详情*/

.category_name {
    height: 30px;
    line-height: 30px;
    padding-left: 20px;
    color: #EEEEEE;
    width: 100%;
    display: block;
    font-size: 14px;
    background-color: #75b3b3;
}

.category_product_body {
    padding: 6px 10px 4px 6px;
    background-color: #FFFFFF;
    margin-bottom: 1px;
    display: flex;
}

.category_product_body .product_image_url {
    width: 60px;
    border-radius: 6px;
    height: 70px;
}

.category_product_body .product_detail {
    flex: 1;
    display: flex;
    margin: 4px 16px 0px 6px;
    flex-direction: column;
}

.category_product_body .product_detail .product_name {
    color: #333333;
    font-size: 16px;
    font-weight: bold;
}

.category_product_body .product_detail .price {

}

.category_product_body .product_detail .price .product_price {
    color: #b31518;
    font-size: 14px;
}

.category_product_body .product_detail .price .market_price {
    text-decoration: line-through;
    margin-left: 60px;
    font-size: 14px;
}

.category_product_body .product_detail .sell_out_cart {
    display: flex;
    justify-content: space-between;
}

.category_product_body .product_detail .sell_out_cart .sell_out {
    font-size: 12px;
}

